<!DOCTYPE html>
<html>
	<head>
		<mata charset = "UTF-8">
		<title> 4-8</title>
		<%= stylesheet_link_tag "application", :media => "all" %>
	</head>

	<body>
		<h1>Books</h1>

			<table>
				<thead>
					<tr>
						<th>title</th>
						<th>body</th>
						<th></th>
					</tr>
				</thead>

			<tbody>
				<% @posts.each do |post| %>
					<tr>
						<td>
							<%= post.title %>
						</td>
						<td>
							<%= post.body %>
						</td>
						<td>
							<%= link_to "Show", post_path(post.id), class:"show_#{post.id}" %>
							<%= link_to "Edit", edit_post_path(post.id), class:"edit_#{post.id}" %>
							<%= link_to "Destroy", destroy_post_path(post.id), method: :delete, "data-confirm" => "本当に削除しますか？", class:"destroy_#{post.id}" %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>

		<h2> New book</h2>

			<%= form_for(@post) do |f| %>

    			<h4> Title</h4>
    			<%= f.text_field :title, class: "book_title" %>

    			<h4> Body</h4>
    			<%= f.text_area :body, class: "book_body" %>

    			<br><%= f.submit 'Create Book' %>

			<% end %>
	</body>
</html>